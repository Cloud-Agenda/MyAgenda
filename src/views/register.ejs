<%- include('partials/header') %>

<section class="auth-page">
  <div class="card login-card">
    <h2>Inscription</h2>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert error"><%= error %></div>
    <% } %>

    <form action="/register" method="POST" class="auth-form">
      <label>Nom d'utilisateur
        <input name="username" type="text" required placeholder="Nom d'utilisateur" />
      </label>

      <label>Email
        <input name="email" type="email" required placeholder="Email" />
      </label>

      <label>Mot de passe
        <input name="password" type="password" required placeholder="Mot de passe" />
      </label>

      <label>Classe
        <input name="classe" type="text" placeholder="Ex: 3A" />
      </label>

      <div class="form-actions">
        <button class="button primary" type="submit">S'inscrire</button>
        <a class="button muted" href="/">Annuler</a>
      </div>
    </form>

    <p class="small muted">Déjà un compte ? <a href="/login">Se connecter</a></p>
  </div>
</section>

<%- include('partials/footer') %>
