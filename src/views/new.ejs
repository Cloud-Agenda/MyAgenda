<%- include('partials/header') %>

<section class="form card">
  <h2>New homework</h2>
  <form action="/events" method="POST">
    <label>Title<br><input name="title" required></label>
    <label>Subject<br><input name="subject"></label>
    <label>Date<br><input type="date" name="due_date"></label>
    <label>Time (optionnel)<br><input type="time" name="time"></label>
    <label>Class<br><input name="class"></label>
    <label>Attachment (URL)<br><input name="attachment" type="url"></label>
    <label>Description<br><textarea name="description"></textarea></label>
    <div class="form-actions">
      <button class="button primary" type="submit">Create</button>
      <a class="button muted" href="/">Cancel</a>
    </div>
  </form>
</section>

<%- include('partials/footer') %>
