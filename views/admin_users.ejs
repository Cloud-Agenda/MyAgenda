<%- include('partials/header') %>

    <section class="card">
        <h2>Administration - Utilisateurs</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom d'utilisateur</th>
                    <th>Email</th>
                    <th>Classe</th>
                    <th>Admin</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(function(u){ %>
                    <tr>
                        <td>
                            <%= u.id %>
                        </td>
                        <td>
                            <%= u.username %>
                        </td>
                        <td>
                            <%= u.email %>
                        </td>
                        <td>
                            <%= u.classe %>
                        </td>
                        <td>
                            <%= u.isAdmin ? 'Oui' : 'Non' %>
                        </td>
                        <td>
                            <div style="display:flex; gap:0.5rem;">
                                <% if (locals.user && u.id !==locals.user.id) { %>
                                    <form action="/admin/users/<%= u.id %>/toggle-admin" method="POST"
                                        style="margin:0;">
                                        <button type="submit" class="button small outline">
                                            <%= u.isAdmin ? 'Retirer Admin' : 'Mettre Admin' %>
                                        </button>
                                    </form>
                                    <form action="/admin/users/<%= u.id %>?_method=DELETE" method="POST"
                                        style="margin:0;" onsubmit="return confirm('Supprimer cet utilisateur ?');">
                                        <button type="submit" class="button small danger">Supprimer</button>
                                    </form>
                                    <% } else { %>
                                        <span class="muted">Vous</span>
                                        <% } %>
                            </div>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
        <div style="margin-top: 1rem;">
            <a class="button muted" href="/">Retour</a>
        </div>
    </section>

    <%- include('partials/footer') %>